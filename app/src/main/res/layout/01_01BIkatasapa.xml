<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/KataSapa"
            android:layout_width="242dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:text="Kalimat Sapaan"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinebandingkatasapa"
            app:layout_constraintRight_toLeftOf="@+id/guidelinebandingkatasapa2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.494" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelinebandingkatasapa"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelinebandingkatasapa2"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.96" />
        <TextView
            android:layout_width="296dp"
            android:layout_height="86dp"
            android:id="@+id/katasapatujuan"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinebandingkatasapa"
            app:layout_constraintRight_toLeftOf="@+id/guidelinebandingkatasapa2"
            app:layout_constraintTop_toBottomOf="@id/KataSapa"
            android:text=" Tujuan : Siswa mengerti penggunaan kata sapa sesuai waktunya "
            android:layout_marginTop="13dp"
            app:layout_constraintHorizontal_bias="0.571"
            android:layout_marginRight="8dp" />
        <TextView
            android:layout_width="329dp"
            android:layout_height="122dp"
            android:id="@+id/penjelasankatasapa"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinebandingkatasapa"
            app:layout_constraintRight_toLeftOf="@+id/guidelinebandingkatasapa2"
            app:layout_constraintTop_toBottomOf="@id/katasapatujuan"
            android:text=" Menyapa pada pagi hari biasanya dari jam 06.00 sampai 12.00 : Selamat Pagi \n Menyapa pada siang hari jam 12;00 sampai jam 3 siang adalah :Selamat Siang \n jam 4 sampai jam 6 adalah Selamat sore dari jam 6 sore keatas adalah selamat malam "
            android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginRight="8dp" />
        <TextView
            android:layout_width="329dp"
            android:layout_height="122dp"
            android:id="@+id/penjelasankatasapa2"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinebandingkatasapa"
            app:layout_constraintRight_toLeftOf="@+id/guidelinebandingkatasapa2"
            app:layout_constraintTop_toBottomOf="@id/penjelasankatasapa"
            android:text="Setiap kali menyapa harus diperhatikan orang nya , jika dia lebih tua awali dengan kata ibu / bapak jika seumuran boleh langsung namanya ato menjawab langsung"
            android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginRight="8dp" />




    </android.support.constraint.ConstraintLayout>
</ScrollView>