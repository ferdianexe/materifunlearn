<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ferdy.makan.Win_Layout">
   <android.support.constraint.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">


       <TextView

           android:layout_width="353dp"
           android:layout_height="166dp"
           android:text="Menyebut & Mengurutkan Bilangan"
           android:gravity="center"
           android:textSize="30dp"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_marginTop="16dp"
           android:layout_marginRight="8dp"
           android:textStyle="bold"
           android:layout_marginEnd="8dp"
           android:id="@+id/textView"
           android:layout_marginLeft="8dp"
           app:layout_constraintLeft_toLeftOf="@+id/guideline"
           app:layout_constraintRight_toLeftOf="@+id/guideline2"
           app:layout_constraintHorizontal_bias="0.517"
           tools:layout_editor_absoluteX="7dp" />
       <TextView
           android:layout_width="310dp"
           android:layout_height="65dp"
           android:textSize="25dp"
           android:text="Tujuan : Membilang banyak benda"
           android:layout_marginLeft="8dp"
           app:layout_constraintLeft_toLeftOf="@+id/guideline"
           android:layout_marginRight="8dp"
           android:layout_marginTop="17dp"
           app:layout_constraintTop_toBottomOf="@+id/textView"

           android:id="@+id/textView5"
           app:layout_constraintHorizontal_bias="0.424"
           app:layout_constraintRight_toLeftOf="@+id/guideline2" />

       <TextView
           android:layout_width="310dp"
           android:layout_height="65dp"
           android:textSize="25dp"
           android:text="Beberapa : jika benda tersebut lebih dari satu"
           android:id="@+id/textView3"
           android:layout_marginRight="8dp"
           android:layout_marginLeft="8dp"
           app:layout_constraintLeft_toLeftOf="@+id/guideline"
           android:layout_marginTop="21dp"
           app:layout_constraintTop_toBottomOf="@+id/textView5"
           app:layout_constraintHorizontal_bias="0.515"
           app:layout_constraintRight_toLeftOf="@+id/guideline2" />
       <TextView
           android:layout_width="112dp"
           android:layout_height="31dp"
           android:textSize="25dp"
           android:text="Contoh :"
           android:textStyle="bold"
           android:id="@+id/textView4"
           android:layout_marginRight="8dp"
           android:layout_marginLeft="8dp"
           app:layout_constraintLeft_toLeftOf="@+id/guideline"
           app:layout_constraintHorizontal_bias="0.045"
           android:layout_marginTop="31dp"
           app:layout_constraintTop_toBottomOf="@+id/textView3"
           app:layout_constraintRight_toLeftOf="@+id/guideline2" />
       <ImageView
           android:layout_width="200dp"
           android:layout_height="100dp"
           android:layout_marginRight="8dp"
           android:layout_marginLeft="8dp"
           android:src="@drawable/ppensil"
           android:scaleType="centerCrop"
           app:layout_constraintLeft_toLeftOf="@+id/guideline"
           app:layout_constraintHorizontal_bias="0.072"
           android:layout_marginTop="17dp"
           app:layout_constraintTop_toBottomOf="@+id/textView4"
           app:layout_constraintRight_toLeftOf="@+id/guideline2"
           android:id="@+id/imageView" />
        <TextView
            android:layout_width="277dp"
            android:layout_height="37dp"
            android:textSize="25dp"
            android:text="Dibaca sebagai :"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@+id/guideline2"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="0.183"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:id="@+id/textView6" />

       <TextView
           android:layout_width="277dp"
           android:layout_height="37dp"
           android:textSize="25dp"
           android:text="Beberapa pensil"
           app:layout_constraintRight_toLeftOf="@+id/guideline2"
           android:layout_marginRight="8dp"
           android:layout_marginLeft="8dp"
           app:layout_constraintLeft_toLeftOf="@+id/guideline"
           app:layout_constraintHorizontal_bias="0.183"
           android:layout_marginTop="25dp"
           app:layout_constraintTop_toBottomOf="@+id/textView6"
           android:id="@+id/textView8" />

       <TextView
           android:layout_width="277dp"
           android:layout_height="37dp"
           android:textSize="25dp"
           android:text="Tiga pensil"
           app:layout_constraintRight_toLeftOf="@+id/guideline2"
           android:layout_marginRight="57dp"
           android:id="@+id/textView12"

           android:layout_marginTop="25dp"
           app:layout_constraintTop_toBottomOf="@+id/textView8" />


       <android.support.constraint.Guideline
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/guideline"
           android:orientation="vertical"
           app:layout_constraintGuide_percent="0.04" />

       <android.support.constraint.Guideline
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/guideline2"
           android:orientation="vertical"
           app:layout_constraintGuide_percent="0.96" />

       <ImageView
           android:id="@+id/dftrbilanganview"
           android:layout_width="248dp"
           android:layout_height="294dp"
           android:layout_marginLeft="8dp"
           android:layout_marginRight="8dp"
           android:layout_marginTop="0dp"
           android:src="@drawable/dftrbilangan"
           app:layout_constraintHorizontal_bias="0.142"
           app:layout_constraintLeft_toLeftOf="@+id/guideline"
           app:layout_constraintRight_toLeftOf="@+id/guideline2"
           app:layout_constraintTop_toBottomOf="@id/textView12" />

       <ImageView
           android:id="@+id/limabelasview"
           android:layout_width="248dp"
           android:layout_height="265dp"
           android:src="@drawable/dftrsblslimabls"
           app:layout_constraintLeft_toLeftOf="@+id/guideline"
           app:layout_constraintRight_toLeftOf="@+id/guideline2"
           app:layout_constraintHorizontal_bias="0.18"
           android:layout_marginTop="27dp"
           app:layout_constraintTop_toBottomOf="@+id/dftrbilanganview" />

       <ImageView
           android:id="@+id/duapuluhbelasview"
           android:layout_width="248dp"
           android:layout_height="265dp"
           android:src="@drawable/dftrenamblsduaplh"
           android:layout_marginTop="45dp"
           app:layout_constraintTop_toBottomOf="@+id/limabelasview"
           app:layout_constraintLeft_toLeftOf="@+id/guideline"
           app:layout_constraintRight_toLeftOf="@+id/guideline2"

           app:layout_constraintHorizontal_bias="0.18"
           />
       <ImageView
           android:layout_width="153dp"
           android:layout_height="114dp"
           android:src="@drawable/urutkan"
           app:layout_constraintTop_toBottomOf="@id/duapuluhbelasview"
           app:layout_constraintLeft_toLeftOf="@+id/guideline"
           app:layout_constraintRight_toLeftOf="@+id/guideline2"
           android:layout_marginTop="27dp"
           app:layout_constraintHorizontal_bias="0.101"
           />


   </android.support.constraint.ConstraintLayout>



</ScrollView>