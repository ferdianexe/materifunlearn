            app:layout_constraintLeft_toLeftOf="@+id/guidelinebandingfktop"
            app:layout_constraintRight_toLeftOf="@+id/guidelinebandingfktop2"
            app:layout_constraintTop_toBottomOf="@id/fktop"
            android:src="@drawable/fktop"
            app:layout_constraintHorizontal_bias="0.391"
            android:id="@+id/fktopg"
            android:layout_marginTop="5dp"
            tools:layout_editor_absoluteY="202dp"
