<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/judldatar"
        android:layout_width="242dp"
        android:layout_height="96dp"
        android:gravity="center"
        android:text="Mengenal Bangun Datar"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guidelinedatar"
        app:layout_constraintRight_toLeftOf="@+id/guidelinedatar2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidelinedatar"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidelinedatar2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />
        <TextView
            android:layout_width="289dp"
            android:layout_height="48dp"
            android:id="@+id/tujuandatar"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinedatar"
            app:layout_constraintRight_toLeftOf="@+id/guidelinedatar2"
            app:layout_constraintTop_toBottomOf="@id/judldatar"
            android:text="Memperkenalkan apa itu bangun datar"
            android:layout_marginTop="13dp"
            app:layout_constraintHorizontal_bias="0.571"
            android:layout_marginRight="8dp"
            tools:layout_editor_absoluteX="51dp" />
        <TextView
            android:layout_width="289dp"
            android:layout_height="62dp"
            android:id="@+id/jelasbanding"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinedatar"
            app:layout_constraintRight_toLeftOf="@+id/guidelinedatar2"
            app:layout_constraintTop_toBottomOf="@id/tujuandatar"
            android:text="bangun datar adalah kumpulan garis yang yang saling menmpel dan tidak saling berpotongan"
            android:layout_marginTop="13dp"
            app:layout_constraintHorizontal_bias="0.571"
            android:layout_marginRight="8dp"
            tools:layout_editor_absoluteY="202dp" />
        <ImageView
            android:layout_width="309dp"
            android:layout_height="173dp"
            android:id="@+id/bandinggambar1"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinedatar"
            app:layout_constraintRight_toLeftOf="@+id/guidelinedatar2"
            app:layout_constraintTop_toBottomOf="@id/jelasbanding"
            android:src="@drawable/geodatar"
            android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.611"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" />
    </android.support.constraint.ConstraintLayout>

</ScrollView>