<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/energijudul"
            android:layout_width="242dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:text="Energi"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinebandingEnergi"
            app:layout_constraintRight_toLeftOf="@+id/guidelinebandingEnergi2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.494" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelinebandingEnergi"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelinebandingEnergi2"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.96" />
        <TextView
            android:layout_width="294dp"
            android:layout_height="44dp"
            android:id="@+id/energitujuan"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinebandingEnergi"
            app:layout_constraintRight_toLeftOf="@+id/guidelinebandingEnergi2"
            app:layout_constraintTop_toBottomOf="@id/energijudul"
            android:text=" Panas bunyi dan cahaya adalah bentuk energi "
            android:layout_marginTop="13dp"
            app:layout_constraintHorizontal_bias="0.571"
            android:layout_marginRight="8dp"
            tools:layout_editor_absoluteX="46dp" />


        <TextView
            android:layout_width="292dp"
            android:layout_height="47dp"
            android:id="@+id/energipanas"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinebandingEnergi"
            app:layout_constraintRight_toLeftOf="@+id/guidelinebandingEnergi2"
            app:layout_constraintTop_toBottomOf="@id/energitujuan"
            android:text=" Benda yang dapat memberikan panas adalah Setrika ,Kompor "
            android:layout_marginTop="13dp"
            app:layout_constraintHorizontal_bias="0.571"
            android:layout_marginRight="8dp"
            tools:layout_editor_absoluteX="48dp" />
        <TextView
            android:layout_width="296dp"
            android:layout_height="86dp"
            android:id="@+id/energibunyi"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinebandingEnergi"
            app:layout_constraintRight_toLeftOf="@+id/guidelinebandingEnergi2"
            app:layout_constraintTop_toBottomOf="@id/energipanas"
            android:text=" Benda yang dapat memberikan bunyi adalah Radio ,Alat Musik"
            android:layout_marginTop="13dp"
            app:layout_constraintHorizontal_bias="0.571"
            android:layout_marginRight="8dp" />

        <TextView
            android:layout_width="296dp"
            android:layout_height="86dp"
            android:id="@+id/energicahaya"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinebandingEnergi"
            app:layout_constraintRight_toLeftOf="@+id/guidelinebandingEnergi2"
            app:layout_constraintTop_toBottomOf="@id/energibunyi"
            android:text=" Benda yang dapat memberikan cahaya adalah Lampu\n Dibawah ini adalah contoh dari Setrika , Radio dan Lampu secara berurutan  "
            android:layout_marginTop="13dp"
            app:layout_constraintHorizontal_bias="0.571"
            android:layout_marginRight="8dp" />

        <ImageView
            android:layout_width="139dp"
            android:layout_height="129dp"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinebandingEnergi"
            app:layout_constraintRight_toLeftOf="@+id/guidelinebandingEnergi2"
            app:layout_constraintTop_toBottomOf="@id/energicahaya"
            android:src="@drawable/Setrika"
            app:layout_constraintHorizontal_bias="0.135"
            android:id="@+id/setrika"
            android:layout_marginTop="0dp" />

        <ImageView
            android:layout_width="107dp"
            android:layout_height="149dp"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinebandingEnergi"
            app:layout_constraintRight_toLeftOf="@+id/guidelinebandingEnergi2"
            app:layout_constraintTop_toBottomOf="@id/energicahaya"
            android:src="@drawable/Radio"
            app:layout_constraintHorizontal_bias="0.866"
            android:id="@+id/radio"
            android:layout_marginTop="0dp"
            tools:layout_editor_absoluteY="369dp" />

        <ImageView
            android:layout_width="138dp"
            android:layout_height="121dp"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinebandingEnergi"
            app:layout_constraintRight_toLeftOf="@+id/guidelinebandingEnergi2"
            app:layout_constraintTop_toBottomOf="@id/radio"
            android:src="@drawable/lampu"
            app:layout_constraintHorizontal_bias="0.4"
            android:id="@+id/lampu"
            android:layout_marginTop="-75dp" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>