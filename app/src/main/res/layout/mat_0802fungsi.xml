<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fungsijudul"
            android:layout_width="242dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:text="Fungsi"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinebandingfungsi"
            app:layout_constraintRight_toLeftOf="@+id/guidelinebandingfungsi2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.494" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelinebandingfungsi"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelinebandingfungsi2"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.96" />
        <TextView
            android:layout_width="311dp"
            android:layout_height="409dp"
            android:id="@+id/fungsijelas"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinebandingfungsi"
            app:layout_constraintRight_toLeftOf="@+id/guidelinebandingfungsi2"
            app:layout_constraintTop_toBottomOf="@id/fungsijudul"
            android:text=" Jika fungsi f : x → ax + b dengan x anggota domain f, rumus fungsi f adalah f (x) = ax + b\n
Diketahui fungsi f: x → 2x – 2 pada himpunan bilangan bulat. Tentukan:
a. f (1),
b. f (2),
jawab:\n
a. f (1) = 2 (1) – 2 = 0
b. f (2) = 2 (2) – 2 = 2"
            android:layout_marginTop="13dp"
            app:layout_constraintHorizontal_bias="0.571"
            android:layout_marginRight="8dp" />




    </android.support.constraint.ConstraintLayout>
</ScrollView>