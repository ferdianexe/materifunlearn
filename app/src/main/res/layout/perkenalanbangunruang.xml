<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/bangunruangkenal"
        android:layout_width="297dp"
        android:layout_height="31dp"
        android:text="Bangun Ruang"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_weight="0.08"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="46dp" />

    <TextView
        android:id="@+id/tujuankenalbangunruang"
        android:layout_width="304dp"
        android:layout_height="41dp"
        android:text="Tujuan : Memperkenalkan bangun ruang"
        app:layout_constraintLeft_toLeftOf="@+id/guidelinebangunruang"
        app:layout_constraintRight_toLeftOf="@+id/guidebangunruang2"
        android:gravity="left"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/bangunruangkenal"
        android:layout_weight="0.08"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.489" />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:src="@drawable/kenalbangunruang"
        app:layout_constraintTop_toBottomOf="@+id/tujuankenalbangunruang"
        app:layout_constraintLeft_toLeftOf="@+id/guidelinebangunruang"
        app:layout_constraintRight_toLeftOf="@+id/guidebangunruang2"
        android:layout_marginTop="45dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
         />
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidelinebangunruang"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="16dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidebangunruang2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="369dp" />
</android.support.constraint.ConstraintLayout>