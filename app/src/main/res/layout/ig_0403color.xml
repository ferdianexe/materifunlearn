<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/colorjdul"
            android:layout_width="242dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:text="Color"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinebandingcolor"
            app:layout_constraintRight_toLeftOf="@+id/guidelinebandingcolor2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.494" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelinebandingcolor"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelinebandingcolor2"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.96" />


        <ImageView
            android:layout_width="298dp"
            android:layout_height="309dp"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinebandingcolor"
            app:layout_constraintRight_toLeftOf="@+id/guidelinebandingcolor2"
            app:layout_constraintTop_toBottomOf="@id/colorjdul"
            android:src="@drawable/clor"
            app:layout_constraintHorizontal_bias="0.49"
            android:id="@+id/clor"
            android:layout_marginTop="-35dp" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>