<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/peluangjdl"
            android:layout_width="242dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:text="Peluang"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinebandingpeluang"
            app:layout_constraintRight_toLeftOf="@+id/guidelinebandingpeluang2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.494" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelinebandingpeluang"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelinebandingpeluang2"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.96" />
        <TextView
            android:layout_width="296dp"
            android:layout_height="39dp"
            android:id="@+id/peluuang"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinebandingpeluang"
            app:layout_constraintRight_toLeftOf="@+id/guidelinebandingpeluang2"
            app:layout_constraintTop_toBottomOf="@id/peluangjdl"
            android:text=" Peluang
Peluang hanya memiliki 1 rumus saja"
            android:layout_marginTop="13dp"
            app:layout_constraintHorizontal_bias="0.571"
            android:layout_marginRight="8dp"
            tools:layout_editor_absoluteY="164dp"
            tools:layout_editor_absoluteX="44dp" />

        <ImageView
            android:layout_width="278dp"
            android:layout_height="91dp"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinebandingpeluang"
            app:layout_constraintRight_toLeftOf="@+id/guidelinebandingpeluang2"
            app:layout_constraintTop_toBottomOf="@id/peluuang"
            android:src="@drawable/peluang"
            app:layout_constraintHorizontal_bias="0.493"
            android:id="@+id/peluanggmbr"
            android:layout_marginTop="11dp" />
        <TextView
            android:layout_width="301dp"
            android:layout_height="213dp"
            android:id="@+id/peluangtrick"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinebandingpeluang"
            app:layout_constraintRight_toLeftOf="@+id/guidelinebandingpeluang2"
            app:layout_constraintTop_toBottomOf="@id/peluanggmbr"
            android:text=" Cara mengerjakan peluang adalah lihat soalnya
jika soalnya meminta DAN maka kita hanya tinggal megalikan semua kemungkinan
jika atau ditambah
perlu diperhatikan bahwa kemungkinan hasil dari peluang tidak akan lebih dari 1 atau kurang dari 0 (negatif)"
            android:layout_marginTop="13dp"
            app:layout_constraintHorizontal_bias="0.571"
            android:layout_marginRight="8dp" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>